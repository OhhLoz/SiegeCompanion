<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/testButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Auth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/testButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Player"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton" />

        <Button
            android:id="@+id/testButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Player"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton2" />

        <Button
            android:id="@+id/testButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Level"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton3" />

        <Button
            android:id="@+id/testButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Level"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton4" />

        <Button
            android:id="@+id/testButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton5" />

        <Button
            android:id="@+id/testButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Stats"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton6" />

        <Button
            android:id="@+id/testButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Ranked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton7" />

        <Button
            android:id="@+id/testButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Ranked"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton8" />

        <Button
            android:id="@+id/testButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Operators"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton9" />

        <Button
            android:id="@+id/testButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Operators"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/testButton10" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>